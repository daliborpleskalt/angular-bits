{
  "name": "testing",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/testing/src",
  "projectType": "library",
  "tags": ["npm:private"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/testing",
        "main": "tools/testing/src/index.ts",
        "tsConfig": "tools/testing/tsconfig.lib.json",
        "assets": ["tools/testing/*.md"],
        "format": ["cjs"],
        "generatePackageJson": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/testing/jest.config.ts"
      }
    }
  }
}
