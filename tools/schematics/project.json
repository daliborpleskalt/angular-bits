{
  "name": "schematics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/schematics/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/schematics",
        "main": "tools/schematics/src/index.ts",
        "tsConfig": "tools/schematics/tsconfig.lib.json",
        "assets": [
          "tools/schematics/*.md",
          {
            "input": "./tools/schematics/src",
            "glob": "**/files/**",
            "output": "./src"
          },
          {
            "input": "./tools/schematics/src",
            "glob": "**/schema.json",
            "output": "./src"
          },
          {
            "input": "./tools/schematics/src",
            "glob": "collection.json",
            "output": "./src"
          },
          {
            "input": "./tools/schematics/src/generators",
            "glob": "**/*",
            "output": "./src/generators"
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/schematics/jest.config.ts"
      }
    }
  },
  "tags": []
}
