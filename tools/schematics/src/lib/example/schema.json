{
  "$schema": "http://json-schema.org/schema",
  "$id": "TopicGenerator",
  "title": "Topic Generator Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the topic",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the topic?"
    },
    "path": {
      "type": "string",
      "description": "The path where the topic will be created",
      "x-prompt": "Where would you like to create the topic?"
    },
    "project": {
      "type": "string",
      "description": "The project where the topic will be created",
      "x-prompt": "Which project should contain this topic?"
    },
    "module": {
      "type": "string",
      "description": "The module to import the topic into",
      "x-prompt": "Which module should import this topic?"
    },
    "category": {
      "type": "string",
      "description": "The category this topic belongs to",
      "enum": ["component", "directive", "service", "pipe"],
      "x-prompt": {
        "message": "Which category does this topic belong to?",
        "type": "list",
        "items": [
          { "value": "component", "label": "Component" },
          { "value": "directive", "label": "Directive" },
          { "value": "service", "label": "Service" },
          { "value": "pipe", "label": "Pipe" }
        ]
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags to categorize the topic"
    },
    "skipTests": {
      "type": "boolean",
      "description": "Skip creating tests",
      "default": false
    },
    "skipDemo": {
      "type": "boolean",
      "description": "Skip creating demo files",
      "default": false
    }
  },
  "required": ["name", "path", "project", "category"]
} 