{
  "$schema": "http://json-schema.org/schema",
  "$id": "TopicSchematic",
  "title": "Topic Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the topic",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of your topic?"
    },
    "category": {
      "type": "string",
      "description": "The category of the topic",
      "enum": ["component", "directive", "service", "pipe"],
      "x-prompt": {
        "message": "Which category does this topic belong to?",
        "type": "list",
        "items": ["component", "directive", "service", "pipe"]
      }
    },
    "path": {
      "type": "string",
      "description": "The path to create the topic",
      "x-prompt": "Where would you like to create the topic?"
    },
    "skipTests": {
      "type": "boolean",
      "description": "Skip creating tests",
      "default": false
    }
  },
  "required": ["name", "category", "path"]
} 